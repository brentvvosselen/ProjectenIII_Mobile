<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearlayout_category_picker"
    >

    <com.mikhaellopez.circularimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageview_category_picker_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Profile picture"
        android:paddingTop="8dp"
        android:src="@drawable/no_picture"
        app:civ_border="false"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_days_list_child" />

    <TextView
        android:id="@+id/textview_category_picker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="14dp" />
</LinearLayout>