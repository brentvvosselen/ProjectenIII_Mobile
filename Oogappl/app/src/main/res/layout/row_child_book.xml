<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/image_row_child_book"
        android:background="@android:color/transparent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/buku" />


    <com.mikhaellopez.circularimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageview_row_child_book_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="39dp"
        android:contentDescription="Profile picture"
        android:paddingTop="8dp"
        android:src="@drawable/no_picture"
        app:civ_border="false"
        app:layout_constraintEnd_toEndOf="@+id/image_row_child_book"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_row_child_book_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="32dp"
        android:text="Jessie"
        android:textAlignment="center"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_row_child_book"
        app:layout_constraintEnd_toEndOf="@+id/image_row_child_book"
        app:layout_constraintStart_toStartOf="@+id/image_row_child_book" />




</android.support.constraint.ConstraintLayout>