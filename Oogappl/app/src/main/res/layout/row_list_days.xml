<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/textview_days_list_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mikhaellopez.circularimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageview_days_list_child"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Profile picture"
        android:paddingTop="8dp"
        android:src="@drawable/no_picture"
        app:civ_border="false"
        app:layout_constraintBottom_toBottomOf="@+id/textview_days_list_description"
        app:layout_constraintEnd_toStartOf="@+id/textview_days_list_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_days_list_child" />

    <TextView
        android:id="@+id/textview_days_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="24 september 2017"
        app:layout_constraintStart_toEndOf="@+id/textview_days_list_child"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_days_list_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_light"
        android:maxLines="2"
        android:minLines="2"
        android:text="Deze dag is jess naar tante gegaan."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textview_days_list_date"
        app:layout_constraintTop_toBottomOf="@+id/textview_days_list_date" />

</android.support.constraint.ConstraintLayout>