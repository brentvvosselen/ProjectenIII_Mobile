<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/textview_calendar_day_dayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZONDAG"
                android:textStyle="bold"
                android:textColor="@color/dim_gray_text"
                android:textSize="16sp"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp" />

            <TextView
                android:id="@+id/textview_calendar_day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:text="20 September"
                android:textColor="@color/dark_gray_text"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_calendar_day_dayOfWeek"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp" />

            <TextView
                android:id="@+id/textview_calendar_day_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:text="@string/upcoming_events"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_gray"

                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_calendar_day_date"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent" />


            <LinearLayout
                android:id="@+id/linearlayout_calendar_day_items"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_calendar_day_upcoming"
                app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</RelativeLayout>