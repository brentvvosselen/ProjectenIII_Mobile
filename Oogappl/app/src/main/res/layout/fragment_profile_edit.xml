<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="@string/personal_data"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_profile_edit_personal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="64dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edittext_profile_edit_address_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bottom_border"
                        android:padding="15dp"
                        android:fontFamily="sans-serif-light"
                        android:ems="10"
                        android:hint="@string/address_street"
                        android:inputType="text"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="162dp" />

                    <EditText
                        android:id="@+id/edittext_profile_edit_address_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bottom_border"
                        android:ems="10"
                        android:hint="@string/address_city"
                        android:inputType="text"
                        android:padding="15dp"
                        android:fontFamily="sans-serif-light"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="162dp" />

                    <EditText
                        android:id="@+id/edittext_profile_edit_address_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bottom_border"
                        android:padding="15dp"
                        android:fontFamily="sans-serif-light"
                        android:ems="10"
                        android:hint="@string/address_number"
                        android:inputType="text"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="162dp" />

                    <EditText
                        android:id="@+id/edittext_profile_edit_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bottom_border"
                        android:padding="15dp"
                        android:fontFamily="sans-serif-light"
                        android:ems="10"
                        android:hint="@string/telephonenumber"
                        android:inputType="text"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="162dp" />

                    <EditText
                        android:id="@+id/edittext_profile_edit_address_postalcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_square"
                        android:padding="15dp"
                        android:fontFamily="sans-serif-light"
                        android:ems="10"
                        android:hint="@string/address_postalcode"
                        android:inputType="text"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="162dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="@string/work_data"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_profile_edit_personal" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_profile_edit_work"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="48dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edittext_profile_edit_work_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bottom_border"
                        android:padding="15dp"
                        android:fontFamily="sans-serif-light"
                        android:ems="10"
                        android:hint="@string/work_number"
                        android:inputType="text"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="162dp" />

                    <EditText
                        android:id="@+id/edittext_profile_edit_work_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_square"
                        android:padding="15dp"
                        android:fontFamily="sans-serif-light"
                        android:ems="10"
                        android:hint="@string/work_name"
                        android:inputType="text"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="162dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button_profile_edit_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="128dp"
                android:layout_marginRight="128dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_white_square_big"
                android:text="@string/save"
                android:textColor="@color/blue_mid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_profile_edit_work" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>